<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/tip_drawerlayout"
    tools:context=".AdminTipsActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/tip_navigationview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/tip_menu"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/tip_admin"
                android:background="#6A73FF"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_creator="1"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/tiptoolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00008577"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/ic_baseline_menu_24_white" />

                <ImageView
                    android:id="@+id/tips_view"
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/tips_icon" />

                <TextView
                    android:id="@+id/tips_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="50dp"
                    android:text="Tips and Information"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tips_desc"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tips_text"
                    android:layout_alignStart="@id/tips_text"
                    android:layout_alignLeft="@+id/tips_text"
                    android:layout_marginTop="5dp"
                    android:text="Some healthy tips and obesity information"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addtip_button"
                    android:layout_width="113dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/tips_desc"
                    android:layout_alignStart="@id/tips_desc"
                    android:layout_alignLeft="@+id/tips_desc"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="+ Add Tips"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:backgroundTint="@color/white"
                    tools:ignore="TouchTargetSizeCheck">

                </com.google.android.material.button.MaterialButton>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tip_admin"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_creator="1">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tip_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />


            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>